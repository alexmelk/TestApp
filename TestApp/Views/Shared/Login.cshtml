@model LoginViewModel
@{
    Layout = "_NotAuthLayout";
    ViewBag.Title = "Вход";
}
<style>
    body {
  margin: 0;
  padding: 0;
  background-color: #17a2b8;
  height: 100vh;
}
#login .container #login-row #login-column #login-box {
  margin-top: 120px;
  max-width: 600px;
  height: 350px;
  border: 1px solid #9C9C9C;
  background-color: #EAEAEA;
}
#login .container #login-row #login-column #login-box #login-form {
  padding: 20px;
}
#login .container #login-row #login-column #login-box #login-form #register-link {
  margin-top: -85px;
}
</style>
<body>
    <div id="login">
        <h3 class="text-center text-white pt-5">Авторизация</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" method="post" asp-action="Login">
                            <h3 class="text-center text-info">Вход</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Имя пользователя:</label><br>
                                <input type="email" asp-for="@Model.Email" id="username" class="form-control" placeholder="name@example.com">
                                <span asp-validation-for="@Model.Email"></span>
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Пароль:</label><br>
                                <input type="password" asp-for="@Model.Password" id="password" class="form-control">
                                <span asp-validation-for="@Model.Password"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="Вход">
                            </div>
                            @*<div id="register-link" class="text-right">
                                <a asp-controller="Account" asp-action="Register" class="text-info">Регистрация</a>
                            </div>*@
                            <div>
                                <span asp-validation-for="@Model.Validation"></span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
